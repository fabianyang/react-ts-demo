{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDirs": ["./src"],
    "baseUrl": "./src",
    "paths": {
        "@constants/*": ["constants/*"],
        "@controller/*": ["controller/*"],
        "@models/*": ["models/*"],
        "@services/*": ["services/*"],
        "@utils/*": ["utils/*"],
        "@assets/*": ["assets/*"],
        "@components/*": ["components/*"],
        "@views/*": ["views/*"],
        "@routers/*": ["routers/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true
  },
  "include": [
    "src", "typings"
  ],
  "exclude": [
    "node_modules",
    "static"
  ],
  "typedocOptions": {
      "mode": "modules",
      "hideGenerator": true,
      "exclude": "**/*+(.spec|.e2e|.test).+(js|jsx|ts|tsx)",
      "out": "docs"
  }
}
